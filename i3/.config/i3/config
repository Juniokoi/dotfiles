#         status_command i3status
# }

# Startup
exec --no-startup-id nm-applet
exec --no-startup-id xborders -c $HOME/.config/xborders/config.json
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id $HOME/.config/xborders/launch.sh
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id xrandr --output $primary --right-of $secondary

# Doesn't work
# using localectl instead
