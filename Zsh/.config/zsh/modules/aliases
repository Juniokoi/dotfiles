#!/usr/bin/env bash
echo "Loading aliases ..."

local EDITOR="nvim"
local CONFIG="$HOME/.config"

hash -d c="$HOME/.config/"

alias hc="nvim $HOME/.config/hypr/hyprland.conf"
xset r rate 300 30

# Shortcuts
alias b="bash"
alias e="ranger ."
alias {c,cl,cle,clea}="clear"
alias cdot="cd $HOME/.dotfiles"
alias vim="nvim"

function editconfig() {
    if [[ $1 -eq "e" ]]; then
	$EDITOR $2
    elif [[ $1 -eq "cd" ]]; then
	if [[ $# -eq 2 ]]; then
	    "cd $2 && nvim"
	else
	    cd $2 && nvim $3
	fi
    else
        echo "Invalid number of arguments passed"
    fi
}

alias bc="editconfig e $HOME/.bashrc"                    # Bash 
alias cvim="cd $HOME/.config/nvim && nvim ."
alias vc="cd $CONFIG/nvim && nvim"
alias ac="editconfig e $CONFIG/awesome/rc.lua"     # Awesome 
alias hc="editconfig e $CONFIG/hypr/hyprland.conf" # Hyprland
alias tc="editconfig e $HOME/.tmux.conf"                 # Tmux

# GNU
alias cp="cp -i" # Confirm before overwriting
alias mv="mv -i" #      --/--     moving/renaming
alias rm="rm -i" #      --/--     deleting

# ZSH 
alias {zr,zsh}="source $HOME/.zshrc"
alias zc="editconfig cd $CONFIG/zsh $HOME/.zshrc" 	      # Main file
alias za="editconfig e $CONFIG/zsh/modules/aliases"    # Alises
alias ze="editconfig e $CONFIG/zsh/modules/exports"    # Exports

# System commands
alias logoff="pkill -KILL -u $USER"
alias sayonara="shutdown -h now"
alias supersudo="sudo --preserve-env=PATH env"
alias {au,aupdate}="yay -Syyuu --noconfirm"

# Tools and applications
# 
## exa & bat & zoxide
alias ls="exa --icons --color=always --color-scale --sort type "
alias la="ls -@lah"
alias lt="ls -T"
alias lta="ls -Ta"
alias cat="bat --style full --theme Dracula"

## Terminals
#
### Kitty
alias kc="$EDITOR $HOME/.config/kitty/kitty.conf"
### Wezterm
alias wc="$EDITOR $HOME/.config/wezterm/wezterm.lua"

# GIT
alias gs="git-st"
alias gc="git commit -m"
alias gl="git lg"
alias glo="git log --oneline"
alias ga="git add"
alias lg="lazygit"

alias ip="curl -s https://api.ipify.org; echo"

## Emacs
alias emacs="emacsclient -c -a 'emacs'"

## Docker
alias di="docker image"
alias dv="docker volume"
alias dc="docker container"

echo "Aliases loaded"

alias obs="~/.bin/obs-launcher.sh &"
