local EDITORR="nvim"

alias b="bash"
alias vim="nvim"
alias e="ranger"
alias sayonara="shutdown -h now"
alias bc="$EDITORR $HOME/.bashrc"
alias logoff="sudo pkill -KILL -u $USER"
alias supersudo="sudo --preserve-env=PATH env"
alias ac="$EDITORR $HOME/.config/awesome/rc.lua"
alias kc="$EDITORR $HOME/.config/kitty/kitty.conf"

 ## Confirm before overwriting something
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"

 ## Laziness
alias {zz,s,f}="zsh"
alias {c,cl,cle,clea}="clear"
alias {zc,cv}="$EDITORR $HOME/.config/zsh/.zshrc"
alias za="$EDITORR $HOME/.config/zsh/zsh-aliases"
alias ze="$EDITORR $HOME/.config/zsh/zsh-exports"
alias za="$EDITORR $HOME/.config/wezterm/wezterm.lua"
alias cdot="cd $HOME/.dotfiles"

 ## GIT
alias gs="git-st"
alias gc="git commit -m"
alias gl="git lg"
alias glo="git log --oneline"
alias ga="git add"

 ## External tools
alias exa="exa --color=always --group-directories-first"          # Make exa always birdiful
alias ls="exa -lh --icons"                                        # Substitute default ls
alias la="exa -lah --icons"                                       # All files and dirs
alias lt="exa -Ta"                                                # Tree listing
alias lh=exa -la $* | grep "^\."                                  # List hidden files only
alias cat="bat --style=numbers"                                   # Substitute defaul cat

 ## Emacs runner
alias emacs="emacsclient -c -a 'emacs'"

 # Docker
alias di="docker image"
alias dv="docker volume"
alias dc="docker container"
