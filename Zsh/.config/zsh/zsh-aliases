alias b="bash"
alias vim="nvim"
alias e="ranger"
alias sayonara="shutdown -h now"
alias bc="$EDITOR $HOME/.bashrc"
alias logoff="sudo pkill -KILL -u $USER"
alias supersudo="sudo --preserve-env=PATH env"
alias ac="$EDITOR $HOME/.config/awesome/rc.lua"
alias kc="$EDITOR $HOME/.config/kitty/kitty.conf"

# Confirm before overwriting something
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"

# Laziness
alias {zz,s,f}="zsh"
alias {c,cl,cle,clea}="clear"
alias {zc,cv}="$EDITOR $HOME/.config/zsh/.zshrc"

# External tools
alias exa="exa --color=always --group-directories-first"          # Make exa always birdiful
alias ls="exa -lh --icons"                                        # Substitute default ls
alias la="exa -lah --icons"                                       # All files and dirs
alias lt="exa -Ta"                                                # Tree listing
alias lh=exa -la $* | grep "^\."                                  # List hidden files only
alias cat="bat --style=numbers"                                   # Substitute defaul cat

# Emacs runner
alias emacs="emacsclient -c -a 'emacs'"

# Docker
# alias docker="sudo docker"
alias di="docker image"
alias dv="docker volume"
alias dc="docker container"
