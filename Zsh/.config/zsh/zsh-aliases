local EDITOR="nvim"
local CONFIG="$HOME/.config"

# Shortcuts
alias b="bash"
alias e="ranger ."
alias {zz,s,f}="zsh"
alias {c,cl,cle,clea}="clear"
alias cdot="cd $HOME/.dotfiles"

# Config
alias bc="$EDITOR $HOME/.bashrc"                    # Bash 
alias vc="$EDITOR $HOME/.config/nvim/init.lua"      # Vim
alias ac="$EDITOR $HOME/.config/awesome/rc.lua"     # Awesome 
alias hc="$EDITOR $HOME/.config/hypr/hyprland.conf" # Hyprland
alias tc="$EDITOR $HOME/.tmux.conf"                 # Tmux

# GNU
alias cp="cp -i" # Confirm before overwriting
alias mv="mv -i" #      --/--     moving/renaming
alias rm="rm -i" #      --/--     deleting

# ZSH 
alias zc="$EDITOR $HOME/.zshrc" 	      # Main file
alias za="$EDITOR $CONFIG/zsh/zsh-aliases"    # Alises
alias ze="$EDITOR $CONFIG/zsh/zsh-exports"    # Exports
alias zf="$EDITOR $CONFIG/zsh/zsh-functions"  # Functions

# System commands
alias logoff="pkill -KILL -u $USER"
alias sayonara="shutdown -h now"
alias supersudo="sudo --preserve-env=PATH env"
alias {au,aupdate}="yay -Syyuu --noconfirm"

# Tools and applications
# 
## exa & bat & zoxide
alias ls="exa --icons --color=always --color-scale --sort type "
alias la="ls -@lah"
alias lt="ls -T"
alias lta="ls -Ta"
alias cat="bat --style full --theme Dracula"
alias cd=z

## Terminals
#
### Kitty
alias kc="$EDITOR $HOME/.config/kitty/kitty.conf"
### Wezterm
alias wc="$EDITOR $HOME/.config/wezterm/wezterm.lua"

# GIT
alias gs="git-st"
alias gc="git commit -m"
alias gl="git lg"
alias glo="git log --oneline"
alias ga="git add"
alias lg="lazygit"

## Emacs
alias emacs="emacsclient -c -a 'emacs'"

## Docker
alias di="docker image"
alias dv="docker volume"
alias dc="docker container"
